@using Microsoft.AspNetCore.Identity
@using AS_Practical_Assignment.Models
@inject SignInManager<Member> SignInManager
@inject UserManager<Member> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ace Job Agency</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AS_Practical_Assignment.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body data-authenticated="@(SignInManager.IsSignedIn(User) ? "true" : "false")">
    <header>
     <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
   <div class="container">
    <a class="navbar-brand" asp-area="" asp-page="/Index">🔐 Ace Job Agency</a>
   <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
          aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
     </button>
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
      <ul class="navbar-nav flex-grow-1">
 <li class="nav-item">
           <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
        </li>
       @if (!SignInManager.IsSignedIn(User))
           {
 <li class="nav-item">
     <a class="nav-link text-dark" asp-area="" asp-page="/Register">Register</a>
      </li>
 <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/Login">Login</a>
        </li>
       }
       else
       {
        <li class="nav-item">
       <a class="nav-link text-dark" asp-area="" asp-page="/ActivityLog">Activity Log</a>
           </li>
       }
          <li class="nav-item">
<a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
     </li>
   </ul>
    
      @if (SignInManager.IsSignedIn(User))
   {
       <div class="navbar-text me-3">
       Welcome, <strong>@User.Identity?.Name</strong>
          </div>
      <div class="dropdown me-2">
   <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
      <i class="bi bi-gear"></i> Settings
      </button>
<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
     <li><a class="dropdown-item" asp-page="/ChangePassword"><i class="bi bi-key"></i> Change Password</a></li>
      <li><a class="dropdown-item" asp-page="/Enable2FA"><i class="bi bi-shield-check"></i> Two-Factor Auth</a></li>
      <li><hr class="dropdown-divider"></li>
 <li><a class="dropdown-item" asp-page="/ActivityLog"><i class="bi bi-clock-history"></i> Activity Log</a></li>
  </ul>
        </div>
  <form method="post" asp-page="/Logout" class="d-inline">
   <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
     </form>
    }
    </div>
      </div>
        </nav>
    </header>
    <div class="container">
   <main role="main" class="pb-3">
     @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
 <div class="container">
     &copy; 2025 - Ace Job Agency - <a asp-area="" asp-page="/Privacy">Privacy</a>
      </div>
    </footer>

    <!-- Use jQuery from CDN with SRI hash for security -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" 
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" 
            crossorigin="anonymous"></script>
  
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (SignInManager.IsSignedIn(User))
    {
        <script src="~/js/session-monitor.js" asp-append-version="true"></script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
